@model IEnumerable<Sociable9.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>

<p>
    <a asp-action="Create" class="btn btn-success w-25 btn-vertical-center" style="height: 4rem !important;">Create New</a>
</p>
@foreach (var item in Model)
{
    // using jumbotron to display the categories
    <div class="jumbotron">
        <div class="d-flex justify-content-between align-items-center">
            <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
            <p>
                <!-- Additional details about the category can go here -->
            </p>
            <div class="jumbo-btn">
                <a asp-action="Edit" asp-route-id="@item.CategoryID" class="btn btn-info">Edit</a>
                <a asp-action="Details" asp-route-id="@item.CategoryID" class="btn btn-info">Details</a>
                <a asp-action="Delete" asp-route-id="@item.CategoryID" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
}
